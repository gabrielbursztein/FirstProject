<h1> BOOKS </h1>
<table>
  <tr>
  <th>Book</th><th>Author</th><th>Description</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.year %></td>
      <td><%= book.author %></td>
      <td><%= book.description %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
    </tr>
  <% end %>
</table>
