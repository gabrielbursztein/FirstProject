<h1> BOOKS </h1>
<table class="books_table">
  <tr>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.year %></td>
      <% if user_signed_in? %>
        <% if !current_user.requested?(book) %>
          <td id='<%= book.id %>'>
           <%= link_to 'Request', requests_path(:book_id => book.id), method: :post, remote: true %>
          </td>
        <% else %>
          <td><%= current_user.request_status(book) %></td>   
        <% end %>
      <% end %>
    </tr>
  <% end %>
</table>
