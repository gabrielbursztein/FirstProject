<div class="wrapper">
  <div class="image"><%= image_tag(book.image_url, alt: "one_hundred") %></div>
  <div class="book-title"><%= book.title %></div>
  <div class="book-author"><%= book.author %></div>
  <br>
  <div class="book-author book-year">
    <span><%= book.year %> </span>
    <%= link_to 'Request', book_path(book), class:"request" %>
  </div>
  <p><%= book.description %></p>
  <h1>Comments</h1>
  <div class='comments'>
    <table>
      <% book.comments.each do |comment|%>
        <tr>
          <td><%= comment.description %></td>
          <td><%= comment.rate %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <%= form_for :comment, url: book_comments_path(book), remote: true do |f| %>
    <p>Add a comment</p>
    <p>Rate</p>
    <%= f.number_field :rate %> <br>
    <p>Description</p>
    <%= f.text_area :description %> <br>
    <%= f.submit %>
  <% end %>
</div>
