<div class='log-in-container'>
  <h1>Join the Library</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div>
      <%= f.text_field :name, autofocus: true, class: 'field', placeholder: 'Name' %>
    </div>

    <div>
      <%= f.email_field :email, class: 'field', placeholder: 'Email' %>
    </div>

    <div>
      <%= f.password_field :password, autocomplete: "off", class: 'field', placeholder: 'Password' %>
    </div>

    <div>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'field', placeholder: 'Confirm password' %>
    </div>

    <div class="sign-up">
      <%= f.submit "Sign up", class: 'action' %>
    </div>
  <% end -%>    
  
  <div>
    <h6><%= link_to 'I already have an account', new_user_session_path %></h6>
  </div>
</div>
